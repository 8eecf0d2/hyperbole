{
	"compilerOptions": {
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"module": "commonjs",
		"target": "es5",
		"noImplicitAny": true,
		"sourceMap": true,
		"declaration": true,
		"declarationDir": "./test",
		"outDir": "./test",
		"lib": [
			"es6",
			"es7",
			"dom"
		]
	},
	"include": [
		"src/test/**/*.ts"
	],
	"exclude": [
		"src/main/**/*.ts"
	]
}
